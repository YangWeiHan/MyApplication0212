<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_menu_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:placeholderImage="@mipmap/ic_launcher"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhiqingju"
            android:text="知青居"
            android:textColor="#666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/menu_tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/menu_viewpager"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/menu_tablayout"
        >
    </android.support.v4.view.ViewPager>
    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/home_xbanner"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:clipChildren="false"
        app:AutoPlayTime="3000"
        app:clipChildrenLeftRightMargin="10dp"
        app:isClipChildrenMode="true"
        app:isShowIndicatorOnlyOne="false"
        app:isShowNumberIndicator="true"
        app:pageChangeDuration="800"
        app:layout_constraintTop_toBottomOf="@id/menu_viewpager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></com.stx.xhb.xbanner.XBanner>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/home_xbanner"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>